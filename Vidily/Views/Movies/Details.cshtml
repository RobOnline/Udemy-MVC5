@model Vidily.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>
@if (Model == null)
{<P>No Movie Found</P>}
else
{
    <h2>@Model.Name</h2>
    <ul>
        <li>Genre:@Model.FilmGenres.Genre</li>
        <li>Date Released: @Model.ReleaseDate.ToString("dd/MM/yyyy")</li>
        <li>Date Added: @Model.DateAdded.ToString("dd/MM/yyyy")</li>
        <li>Available: @Model.Stock</li>

    </ul>
}